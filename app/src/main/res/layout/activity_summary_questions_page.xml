<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <Button
        android:id="@+id/button_sumqNext"
        android:layout_width="161dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/NextButton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_sumqPrevious"
        android:layout_width="158dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/PreviousButton"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_endMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="@string/CurrentMatch"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_endTeamNumber"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginEnd="32dp"
        android:text="@string/CurrentTeam"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_endMatch" />

    <ImageView
        android:id="@+id/imageView_btEndIndicator"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/BrokeDownText"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="30dp"
        android:gravity="start|center_horizontal|center_vertical"
        android:text="@string/ShootFromLaunchpad"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/ShootFromY"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/LostCommText"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/ShootFromY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/SubsystemY"
        app:layout_constraintTop_toTopOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/SubsystemBrokeText"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="start|center_horizontal|center_vertical"
        android:text="@string/DefenseAgainstText"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/PlayedDefenseText"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/BrokeDownN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/BrokeDownY"
        app:layout_constraintTop_toTopOf="@+id/BrokeDownY" />

    <Button
        android:id="@+id/LostCommN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/BrokeDownN"
        app:layout_constraintTop_toTopOf="@+id/LostCommY" />

    <Button
        android:id="@+id/ShootFromN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/SubsystemN"
        app:layout_constraintTop_toTopOf="@+id/ShootFromY" />

    <Button
        android:id="@+id/SubsystemN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/LostCommN"
        app:layout_constraintTop_toTopOf="@+id/SubsystemY" />

    <Button
        android:id="@+id/BrokeDownY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <Button
        android:id="@+id/SubsystemY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/LostCommY"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <Button
        android:id="@+id/LostCommY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/BrokeDownY"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <Button
        android:id="@+id/DefenseAgainstThemN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/PlayedDefenseN"
        app:layout_constraintTop_toTopOf="@+id/DefenseAgainstThemY" />

    <Button
        android:id="@+id/DefenseAgainstThemY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/PlayedDefenseY"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <Button
        android:id="@+id/PlayedDefenseN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:text="@string/NoButton"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/PlayedDefenseY"
        app:layout_constraintTop_toTopOf="@+id/PlayedDefenseY" />

    <Button
        android:id="@+id/PlayedDefenseY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:text="@string/YesButton"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:text="@string/SummaryQuestionTitle"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSpeed"
        android:layout_width="256dp"
        android:layout_height="101dp"
        android:layout_marginTop="30dp"
        android:text="How fast were they?"
        android:textAlignment="center"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="@string/RatingText"
        android:textAlignment="center"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/txtShootFrom"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="@string/ShootFrom"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/spinner_Speed"
        app:layout_constraintTop_toTopOf="@+id/txtSpeed" />

    <Spinner
        android:id="@+id/spinner_Speed"
        android:layout_width="266dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/txtSpeed"
        app:layout_constraintTop_toTopOf="@+id/txtSpeed" />

    <Spinner
        android:id="@+id/spinner_ShootFrom"
        android:layout_width="246dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/txtShootFrom"
        app:layout_constraintTop_toTopOf="@+id/txtShootFrom" />

    <Spinner
        android:id="@+id/spinner_Ability"
        android:layout_width="258dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

</android.support.constraint.ConstraintLayout>