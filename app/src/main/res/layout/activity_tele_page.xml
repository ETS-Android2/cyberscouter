<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TeleUpperCounter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelePage">

    <Button
        android:id="@+id/btnTelePrevious"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:text="@string/PreviousButton"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTeleNext"
        android:layout_width="173dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:text="@string/NextButton"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_teleMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:text="@string/CurrentMatch"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_teamNumber"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginEnd="32dp"
        android:text="@string/CurrentTeam"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_teleMatch" />

    <TextView
        android:id="@+id/textView_roleTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/teleopTitle"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_teleBtIndicator"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/upper_text"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/btnTeleUpperAdd"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="@+id/btnTeleUpperSubtract"
        app:layout_constraintTop_toBottomOf="@+id/textView_roleTag" />

    <Button
        android:id="@+id/btnTeleUpperSubtract"
        android:layout_width="71dp"
        android:layout_height="85dp"
        android:layout_marginTop="80dp"
        android:text="@string/MinusButton"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="@+id/textView25" />

    <Button
        android:id="@+id/btnTeleUpperAdd"
        android:layout_width="81dp"
        android:layout_height="102dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:text="@string/PlusButton"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/btnTeleUpperCounter"
        app:layout_constraintTop_toTopOf="@+id/textView25" />

    <Button
        android:id="@+id/btnTeleUpperCounter"
        android:layout_width="106dp"
        android:layout_height="136dp"
        android:layout_marginStart="28dp"
        android:text="@string/ZeroText"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/btnTeleUpperSubtract"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <Button
        android:id="@+id/btnTeleLowerCounter"
        android:layout_width="98dp"
        android:layout_height="131dp"
        android:layout_marginTop="84dp"
        android:text="@string/ZeroText"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/btnTelePrevious"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <Button
        android:id="@+id/btnTeleLowerAdd"
        android:layout_width="81dp"
        android:layout_height="106dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="84dp"
        android:text="@string/PlusButton"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/btnTeleLowerCounter"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="32dp"
        android:text="@string/lower_text"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/btnTeleLowerAdd"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="@+id/btnTeleLowerSubtract"
        app:layout_constraintTop_toBottomOf="@+id/btnTeleUpperCounter" />

    <Button
        android:id="@+id/btnTeleLowerSubtract"
        android:layout_width="71dp"
        android:layout_height="98dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="28dp"
        android:text="@string/MinusButton"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTeleLowerCounter"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

</android.support.constraint.ConstraintLayout>

