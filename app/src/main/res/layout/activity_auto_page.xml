<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoPage">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AutoPage"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button_startMatch"
            android:layout_width="173dp"
            android:layout_height="80dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/StartMatchButton"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewMoveBonus"
            android:layout_width="264dp"
            android:layout_height="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="12dp"
            android:text="@string/MoveBonusText"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/button5"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.994" />

        <Button
            android:id="@+id/button_moveBonusAttempted"
            android:layout_width="263dp"
            android:layout_height="67dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/CurrentTeamColor"
            android:text="@string/AttemptedText"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintStart_toStartOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <TextView
            android:id="@+id/textViewAutoTitle"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:text="@string/AutoLabel"
            android:textAlignment="center"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/AutoLabel" />

        <Button
            android:id="@+id/buttonPrevious"
            android:layout_width="173dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/PreviousButton"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView_btIndicator"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/logo_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/background_light" />

        <Button
            android:id="@+id/button5"
            android:layout_width="263dp"
            android:layout_height="57dp"
            android:layout_marginTop="96dp"
            android:backgroundTint="@color/CurrentTeamColor"
            android:text="Did Not Move"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewMoveBonus"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewMoveBonus"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="260dp"
            android:layout_height="96dp"
            android:backgroundTint="@color/CurrentTeamColor"
            android:text="Achieved Move Bonus"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/button_moveBonusAttempted"
            app:layout_constraintStart_toStartOf="@+id/button_moveBonusAttempted"
            app:layout_constraintTop_toBottomOf="@+id/button_moveBonusAttempted" />

        <Button
            android:id="@+id/outerCounter"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:text="@string/ZeroText"
            android:textColorLink="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/InnerGoalPlus_button"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/LowerCounter"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:text="@string/ZeroText"
            android:textColorLink="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/LowerGoalPlus_button"
            app:layout_constraintTop_toBottomOf="@+id/OuterCounter" />

        <Button
            android:id="@+id/OuterCounter"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:text="@string/ZeroText"
            android:textColorLink="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/OuterGoalPlus_button"
            app:layout_constraintTop_toBottomOf="@+id/outerCounter" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="74dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="92dp"
            android:backgroundTint="@color/CurrentTeamColor"
            android:text="Upper"
            android:textColor="#000000"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="249dp"
            android:layout_height="79dp"
            android:layout_marginTop="96dp"
            android:backgroundTint="@color/CurrentTeamColor"
            android:text="Lower"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="@+id/OuterGoalPlus_button"
            app:layout_constraintStart_toStartOf="@+id/OuterGoalMinus_button"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/InnerGoalPlus_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:text="@string/PlusButton"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/OuterGoalPlus_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:text="@string/PlusButton"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="251dp"
            android:layout_height="75dp"
            android:layout_marginTop="108dp"
            android:backgroundTint="@color/CurrentTeamColor"
            android:text="Missed"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="@+id/LowerGoalPlus_button"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/LowerGoalPlus_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="96dp"
            android:text="@string/PlusButton"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OuterGoalPlus_button" />

        <Button
            android:id="@+id/LowerGoalMinus_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="24dp"
            android:text="@string/MinusButton"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/LowerCounter"
            app:layout_constraintStart_toStartOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/OuterCounter" />

        <Button
            android:id="@+id/OuterGoalMinus_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="@string/MinusButton"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/OuterCounter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/LowerGoalMinus_button"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/InnerGoalMinus_button"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="@string/MinusButton"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/outerCounter"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="813dp"
            android:layout_height="609dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/field" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
